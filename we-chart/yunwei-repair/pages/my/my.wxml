<!--pages/my/my.wxml-->
<view>
  <view class='home'>
    <view class='header'>
      <view class='avator'>
        <image src='{{avator}}'></image>
      </view>
    </view>
  </view>

  <view class='content'>
    <i-cell-group>
      <i-cell title="姓名" value="{{name}}">
        <i-icon size='24' color="#FEA54D" type="addressbook" slot="icon" />
      </i-cell>
      <i-cell title="地址" value="{{address}}">
        <i-icon size='24' color="#FEA54D" type="coordinates" slot="icon" />
      </i-cell>
      <i-cell title="电话" value="{{phone}}">
        <i-icon size='24' color="#FEA54D" type="mobilephone" slot="icon" />
      </i-cell>
      <!-- <i-cell title="设置" url="1" is-link="true">
        <i-icon size='24' color="#FEA54D" type="setup" slot="icon"  />
      </i-cell> -->
    </i-cell-group>
  </view>

  <view style="margin-top:40rpx;">
    <i-button type='error' bind:click="signOut">退出</i-button>
  </view>






</view>