<view class='container'>
  <view class='logo'>
    <image src='/assets/img/logo.png'></image>
  </view>
  <view class='form'>
    <form bindsubmit='submitForm'>
      <view class='user'>
        <image src='/assets/img/login_u.png'></image>
        <input name="username" placeholder='请输入用户名' type='number'/>
      </view>
      <view class='user'>
        <image src='/assets/img/login_p.png'></image>
        <input name="password" placeholder='请输入密码' type='password'/>
      </view>
      <view class='submit'>
        <button form-type='submit'></button>
        <image src='/assets/img/login_btn.png' form-type='submit'></image>
      </view>
    </form>
  </view>
  <view class='bg'>
    <image src='/assets/img/login_bg.png'></image>
  </view>
</view>
