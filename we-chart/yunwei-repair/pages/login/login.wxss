/* pages/login/login.wxss */
/* logo */
.logo{
  padding-top: 140rpx;
  padding-bottom: 80rpx;
  text-align: center;
}
.logo image{
  width: 148rpx;
  height: 148rpx;
}

/* 表单 */
.form{
  width: 80%;
  height: 100%;
  margin: 0 auto;
}
.form .user{
  display: flex;
  justify-content: left;
  border-bottom: 1rpx solid #c5c5c5;
  margin-bottom: 40rpx;
}
.form .user image{
  width: 60rpx;
  height: 60rpx;
  margin-right: 40rpx;
}
.form .register{
  text-align: right;
  padding: 20rpx 40rpx;
  color: #666;
}
.form .submit{
  position: relative;
}
.form .submit button{
  width: 100%;
  height: 80rpx;
  position: absolute;
  top: 0rpx;
  opacity: 0;
}
.form .submit image{
  width: 100%;
  height: 80rpx;
}
.bg{
  width: 100%;
  height: 380rpx;
  position: fixed;
  bottom: 0;
}
.bg image{
  width: 100%;
  height: 100%;
}

