/* pages/end/end.wxss */
.item-radio-group{
  background: #fff;
  display: block;
}
.item-radio-group .item-radio{
  display: inline-block
}
.upload{
  background: #fff;
  padding: 20rpx 40rpx;
  overflow: hidden;
}
.upload-icon {
  background: #fff;
  padding:40rpx;
  border: 1rpx dashed #ddd;
  float: left;

}
.img-item{
  width: 140rpx;
  height: 140rpx;
  display: block;
  float: left;
  margin-left: 20rpx;
}
.img-item image{
  display: block;
  width: 100%;
  height: 100%;
}

/* 添加照片 */
.img{
  display: flex;
  flex-wrap: wrap;
  padding: 20rpx 40rpx;
  background-color: #fff;
}
.img .img_list{
  display: flex;
  flex-wrap: wrap;
  padding: 0rpx 6rpx 6rpx 6rpx;
}
.img .add,.container .img .img_list .image{
  width: 160rpx;
  height: 160rpx;
}
.img .add{
  background-color: #fff;
  padding: 15rpx;
}
.img image{
  width: 140rpx;
  height: 140rpx;  
}
  /* 删除 */
.img .img_list{
  position: relative;
}
.img .img_list .delete{
  width: 50rpx;
  height:50rpx;
  position: absolute;
  top: 0;
  right:6rpx;
  background-color: #ddd;
  text-align: center;
  border-radius: 0 0 0 80%;
}