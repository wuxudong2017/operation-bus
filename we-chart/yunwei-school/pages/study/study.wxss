/* pages/study/syudy.wxss */
.firstFloor{
  width: 95%;
  margin: 20rpx auto;
  padding: 20rpx;
  background-color: #F4F4F4;
  border: 1rpx solid #EDEDED;
  border-radius: 10rpx;
  color:#636363;
}
.firstFloor .floorTitle{
  display: inline-block;
  padding: 5rpx;
  background-color: #20AADF;
  color: #fff;
}
.firstFloor .separate{
  width: 100%;
  height: 2rpx;
  background-color: #20AADF;
}
.firstFloor .floorItem{
  padding: 20rpx 10rpx;
  border-bottom: 1rpx solid #EDEDED;
}
.firstFloor .floorItem .num{
  padding: 4rpx;
  background-color: #FD7F07;
  border-radius: 6rpx;
  color: #fff;
  margin-right: 10rpx;
}
.firstFloor .bottom{
  display: flex;
  justify-content: space-between;
  padding: 0 50rpx;
  margin-top: 30rpx;
}
.firstFloor .bottom>text{
  padding: 0;
  width: 33%;
  line-height: 28rpx;
  font-size: 28rpx;
  text-align: center;
  border-right: 1rpx solid #333;
}
.firstFloor .bottom>text:last-child{
  border-right: 0;
  color: #E0475B;
}
.firstFloor .bottom .preview{
  margin-right: 10rpx;
}