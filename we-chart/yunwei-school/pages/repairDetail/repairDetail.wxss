/* School/pages/proDetail/proDetail.wxss */

/* 维修详情 */
view{box-sizing: border-box;}
.proDetail{
  width: 100%;
  background-color: #EBEBEB;
  font-size: 28rpx;
  color: #6F777A;
}
.proDetail .mode{
  margin-bottom: 15rpx;
}
.proDetail .vertical{
  background-color: #fff;
  padding: 20rpx;
}
.proDetail .pro{
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  background-color: white;
  display: flex;
  margin-bottom: 5rpx;
}
.proDetail .pro .label{
  width: 230rpx;
  height: 80rpx;
  padding-left: 20rpx;
}
.proDetail .pros{
  width: 100%;
  background-color: white;
  margin-bottom: 5rpx;
  padding: 20rpx;
}
.proDetail .pros .cont{
  color: #999;
  padding: 10rpx;
  display: flex;
}
.proDetail .pros .cont>view{
  width: 100rpx;
  height: 100rpx;
  margin: 10rpx;
}
.proDetail .pros .cont image{
  width: 100rpx;
  height: 100rpx;
}
.proDetail .ifOver{
  justify-content: space-between;
  padding: 0 20rpx;
}
.proDetail .reqairName{
  margin-right: 20rpx;
}
.proDetail .vertical .label{
  margin-bottom: 20rpx;
}