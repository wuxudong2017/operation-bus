/* School/pages/schoolIndex/schoolIndex.wxss */
:root{
  --blur:#18c9ff;
}



.schoolIndex{
  width: 100%;
  position: relative;
  font-size: 28rpx;
  color:#6F777A;
}
/* 学校信息 */
.schoolIndex .schoolData{
  position: absolute;
  left: 5%;
  top: 100rpx;
  width: 90%;
  height: 300rpx;
  background-color: #FFFFFF;
  border: 2rpx solid #D6D6D6;
  border-radius: 10rpx;
  padding: 20rpx;
  z-index: 10;
}
.schoolIndex .schoolData .schoolLogo{
  position: absolute;
  top: -70rpx;
  left: 50%;
  margin-left: -70rpx;
}
.schoolIndex .schoolData .schoolLogo image{
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
}
.schoolIndex .schoolData .info{
  width: 100%;
  height: 150rpx;
}
.schoolIndex .schoolData .info .infoTop{
  display: flex;
  justify-content: space-between;
  width: 100%;
  height: 80rpx;
}
.schoolIndex .schoolData .info .infoTop .myself image{
  width: 50rpx;
  height: 50rpx;
}
.schoolIndex .schoolData .info .title{
  font-size: 30rpx;
  text-align: center;
}
.schoolIndex .schoolData .examine{
  display: flex;
  justify-content: space-between;
}
.schoolIndex .schoolData .examine .examineItem{
  width: 34%;
  height: 90rpx;
  display: flex;
  justify-content: space-between;
  flex-direction: column;
  text-align: center;
}
.schoolIndex .schoolData .examine .examineItem text:nth-child(2){
  font-size: 26rpx;
  color: var(--blur);
}
.schoolIndex .schoolData .examine .border{
  border-right: 1rpx solid #EFEFEF;
}
/* 学校信息结束 */
.schoolIndex .blackBackground image{
  width: 100%;
  height: 250rpx;
}
/* 维修列表 */
.schoolIndex .repairList{
  width: 100%;
  /* padding: 200rpx 70rpx 70rpx 70rpx; */
  padding: 300rpx 70rpx 70rpx 70rpx;
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
}
.schoolIndex .repairList .repairItem{
  width: 50%;
  height: 280rpx;
  position: relative;
}
.schoolIndex .repairList .repairItem:first-child{
  border-right: 1rpx solid #EFEFEF;
  border-bottom:1rpx solid #EFEFEF;
}
.schoolIndex .repairList .repairItem:nth-child(3){
  border-right: 1rpx solid #EFEFEF;
}
.schoolIndex .repairList .repairItem:nth-child(2){
  border-bottom:1rpx solid #EFEFEF;
}
.schoolIndex .repairList .repairItem .item{
  width: 180rpx;
  height: 230rpx;
  display: flex;
  flex-direction: column;
  text-align: center;
  /* line-height: 60rpx; */
  position: absolute;
}
.schoolIndex .repairList .repairItem .repair{
  right: 60rpx;
  bottom: 20rpx;
}
.schoolIndex .repairList .repairItem .jindu{
  left: 60rpx;
  bottom: 20rpx;
}
.schoolIndex .repairList .repairItem .equipment{
  right: 60rpx;
  top: 20rpx;
}
.schoolIndex .repairList .repairItem .study{
  left: 60rpx;
  top: 20rpx;
}
.schoolIndex .repairList .repairItem image{
  width: 160rpx;
  height: 160rpx;
  margin: 0 auto;
}

