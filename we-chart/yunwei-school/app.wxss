/**app.wxss**/
@import 'weui.wxss';

/* weui */

page{
    background-color: #F8F8F8;
    font-size: 16px;
    font-family: -apple-system-font,Helvetica Neue,Helvetica,sans-serif;
}
.page__hd {
    padding: 40px;
}
.page__bd {
    padding-bottom: 40px;
}
.page__bd_spacing {
    padding-left: 15px;
    padding-right: 15px;
}

.page__ft{
    padding-bottom: 10px;
    text-align: center;
}

.page__title {
    text-align: left;
    font-size: 20px;
    font-weight: 400;
}

.page__desc {
    margin-top: 5px;
    color: #888888;
    text-align: left;
    font-size: 14px;
}

.container {
  height: 100%;
  box-sizing: border-box;
  font-size: 30rpx;
} 
view{
  box-sizing: border-box;
}



 /* 站位图 */
.zhanwei{
  text-align: center;
  padding-top:80rpx; 
  color: #666;
}
.zhanwei image{
  width: 300rpx;
  height: 300rpx;
}
.zhanwei text{
  font-size: 34rpx;
}

/* 登录,注册 */
/* 表单 */
.form{
  width: 80%;
  height: 100%;
  margin: 0 auto;
}
.form .user{
  display: flex;
  justify-content: left;
  border-bottom: 1rpx solid #c5c5c5;
  margin-top: 40rpx;
}
.form .user image{
  width: 60rpx;
  height: 60rpx;
  /* margin-right: 40rpx; */
}
.form .user input{
  padding-left: 30rpx;
}
.form .search image{
  position: relative;
  left: 55rpx;
} 
.form .register{
  text-align: right;
  padding:20rpx 40rpx 0 0;
  color: #1898FF;
}
.form .submit{
  top: 60rpx;
  position: relative;
}
.form .submit button{
  width: 100%;
  height: 80rpx;
  position: absolute;
  top: 0rpx;
  opacity: 0;
  z-index: 1000;
}
.form .submit image{
  width: 100%;
  height: 80rpx;
}

.bg{
  width: 100%;
  height: 380rpx;
  position: fixed;
  bottom: 0;
}
.bg image{
  width: 100%;
  height: 100%;
}